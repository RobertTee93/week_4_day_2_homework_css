<form class="edit-form" method="post" action="/pizza-orders">
  <label for="first-name">First Name:</label>
  <input type="text" name="first_name" id="first-name" >

  <label for="last-name">Last Name:</label>
  <input type="text" name="last_name" id="last_name">

  <label for="pizza-select">Select a Pizza:</label>
   <select name="topping" id="pizza-select">
     <option value="Margherita">Margherita</option>
     <option value="BBQ Chicken">BBQ Chicken</option>
     <option value="Meat Feast">Meat Feast</option>
     <option value="Pepperoni">Pepperoni</option>
     <option value="Calzone">Calzone</option>
     <option value="Seafood">Seafood</option>
     <option value="Spicy Chicken">Spicy Chicken</option>
   </select>

  <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity">

    <input class="red" type="submit" value="Order Pizza">
</form>
